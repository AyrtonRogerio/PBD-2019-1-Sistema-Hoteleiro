                                          </Label>
                                          <Label text="CPF:" GridPane.columnIndex="1" GridPane.rowIndex="1">
                                             <font>
                                                <Font size="20.0" />
                                             </font>
                                             <GridPane.margin>
                                                <Insets />
                                             </GridPane.margin>
                                          </Label>
                                          <TextField fx:id="cpfField" onAction="#action" promptText="Insira um CPF..." GridPane.columnIndex="1" GridPane.rowIndex="2">
                                             <font>
                                                <Font size="17.0" />
                                             </font>
                                          </TextField>
                                          <Label text="Cargo:" GridPane.columnIndex="2" GridPane.rowIndex="1">
                                             <font>
                                                <Font size="20.0" />
                                             </font>
                                             <GridPane.margin>
                                                <Insets />
                                             </GridPane.margin>
                                          </Label>
                                          <TextField fx:id="cargoField" onAction="#action" promptText="Insira um cargo..." GridPane.columnIndex="2" GridPane.rowIndex="2">
